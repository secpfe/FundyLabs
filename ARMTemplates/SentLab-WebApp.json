{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "namePrefix": {
        "defaultValue": "[concat('myVulWebApp-',uniqueString(resourceGroup().id))]",
        "type": "String"
      },
      "location": {
        "defaultValue": "[resourceGroup().location]",
        "type": "String"
      },
      "hostingPlanName": {
        "defaultValue": "ASP-CyberSOC-b341",
        "type": "String"
      },
      "ftpsState": {
        "defaultValue": "FtpsOnly",
        "type": "String"
      }
  },
  "variables": {
    "uniqueName": "[concat(parameters('namePrefix'), uniqueString(resourceGroup().id))]"
  },
  "resources": [
      {
          "type": "Microsoft.Web/sites",
          "apiVersion": "2022-03-01",
          "name": "[variables('uniqueName')]",
          "location": "[parameters('location')]",
          "dependsOn": [
              "[concat('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
          ],
          "properties": {
              "name": "[variables('uniqueName')]",
              "siteConfig": {
                  "appSettings": [],
                  "linuxFxVersion": "PHP|8.3",
                  "alwaysOn": "false",
                  "ftpsState": "[parameters('ftpsState')]"
              },
              "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
              "clientAffinityEnabled": false,
              "virtualNetworkSubnetId": null,
              "httpsOnly": true,
              "publicNetworkAccess": "Enabled",
              "autoGeneratedDomainNameLabelScope": "TenantReuse"
          },
          "resources": [
              {
                  "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
                  "apiVersion": "2022-09-01",
                  "name": "[concat(variables('uniqueName'), '/scm')]",
                  "location": "[parameters('location')]",
                  "dependsOn": [
                      "[resourceId('Microsoft.Web/Sites', variables('uniqueName'))]"
                  ],
                  "properties": {
                      "allow": false
                  }
              },
              {
                  "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
                  "apiVersion": "2022-09-01",
                  "location": "[parameters('location')]",
                  "name": "[concat(variables('uniqueName'), '/ftp')]",
                  "dependsOn": [
                      "[resourceId('Microsoft.Web/Sites', variables('uniqueName'))]"
                  ],
                  "properties": {
                      "allow": false
                  }
              }
          ]
      },
      {
          "type": "Microsoft.Web/serverfarms",
          "apiVersion": "2018-11-01",
          "name": "[parameters('hostingPlanName')]",
          "location": "[parameters('location')]",
          "dependsOn": [],
          "sku": {
              "Tier": "Basic",
              "Name": "B1"
          },
          "kind": "linux",
          "properties": {
              "name": "[parameters('hostingPlanName')]",
              "workerSize": "0",
              "workerSizeId": "0",
              "numberOfWorkers": "1",
              "reserved": true,
              "zoneRedundant": false
          }
      },
      {
        "type": "Microsoft.Web/sites/sourcecontrols",
        "apiVersion": "2021-02-01",
        "name": "[concat(variables('uniqueName'),'/web')]",
        "dependsOn": [
          "[resourceId('Microsoft.Web/sites', variables('uniqueName'))]"
        ],
        "properties": {
          "repoUrl": "https://github.com/secpfe/vulnUp",
          "branch": "main",
          "isManualIntegration": true
        }
      },
      {
        "type": "Microsoft.Web/sites/providers/diagnosticSettings",
        "apiVersion": "2017-05-01-preview",
        "name": "[concat(variables('uniqueName'), '/Microsoft.Insights/', 'diagnosticSettingWebApp')]",
        "dependsOn": [
          "[resourceId('Microsoft.Web/sites', variables('uniqueName'))]"
        ],
        "properties": {
          "workspaceId": "[resourceId('CyberSOC', 'Microsoft.OperationalInsights/workspaces', 'CyberSOCWS')]",
          "logs": [
            {
              "category": "AppServiceHTTPLogs",
              "enabled": true,
              "retentionPolicy": {
                "enabled": false,
                "days": 0
              }
            }
          ],
          "metrics": []
        }
      }
  ]
} 
